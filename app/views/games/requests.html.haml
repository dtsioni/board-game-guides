

%p
  Request for:
  =link_to @game.name, @game
%table{class:"list", id:"index_game_requests"}
  %thead
    %tr
      -if can? :vote, request
        %td
          Vote:
      %td
        Score:
      %td
        Title:
         
      %td
        Status:
      %td
        Author:
  -@requests.each do |request|
    %tbody
      %tr
        %td
          =link_to "Vote", new_vote_path
        %td
          =(request.count_votes("up") - request.count_votes("down"))
        %td
          =request.title           
        %td
          =request.status
        %td
          =link_to request.user.name, request.user      
        %td
          -if can? :delete, request
            =link_to "Delete this request", request_path(request), method: :delete, data:{confirm:"Are you sure?"}
            %br    
      %tr
        %td
          %br
      %tr
        %td
          =request.body
      